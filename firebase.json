{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/:slug",
        "destination": "/vitrine.html",
        "not": [
          {
            "glob": "**/*.{html,css,js,png,jpg,jpeg,gif,svg,ico,map}"
          }
        ]
      }
    ]
  }
}

